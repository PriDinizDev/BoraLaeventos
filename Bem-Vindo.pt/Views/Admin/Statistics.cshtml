@model Bem_vindo.pt.Models.StatisticsViewModel
@{
    ViewData["Title"] = "Estatísticas do Site";
}

<div class="container-fluid mt-4">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    </div>

    <div class="row">

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total de Utilizadores
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Utilizadores Ativos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Utilizadores Inativos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.InactiveUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-times fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total de Guias
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalGuides</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Tópicos no Fórum
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalForumTopics</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Respostas no Fórum
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalForumReplies</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-reply-all fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-6 mb-4">
            @* Ajustado para col-lg-6 *@
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Gráfico de Utilizadores (Ativos vs. Inativos)</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area" style="height: 320px;">
                        <canvas id="myBarChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            @* Ajustado para col-lg-6 *@
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Últimos 5 Utilizadores Registados</h6>
                </div>
                <div class="card-body" style="max-height: 370px; overflow-y: auto;">
                    @* Adicionado limite de altura e scroll *@
                    @if (Model.RecentUsers != null && Model.RecentUsers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-striped table-hover mb-0">
                                @* mb-0 para tirar margem no fundo *@
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.RecentUsers)
                                    {
                                        <tr>
                                            <td>@user.Nome</td>
                                            <td>@user.Email</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted mt-3 mb-0">Nenhum utilizador registado recentemente.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-12 mb-4">
            @* Ocupa a largura toda *@
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Top 5 Guias Mais Favoritados</h6>
                </div>
                <div class="card-body">
                    @if (Model.TopFavoritedGuides != null && Model.TopFavoritedGuides.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-striped table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Título do Guia</th>
                                        <th class="text-end">Nº de Favoritos</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var topGuide in Model.TopFavoritedGuides)
                                    {
                                        <tr>
                                            <td>
                                                @* Link para o detalhe do guia *@
                                                <a asp-controller="Home" asp-action="DetalhesGuia" asp-route-id="@topGuide.GuideId">
                                                    @topGuide.Title
                                                </a>
                                            </td>
                                            <td class="text-end">@topGuide.FavoriteCount</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted mt-3 mb-0">Ainda não existem guias favoritados.</p>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>

    <script type="text/javascript">
        // Espera o DOM carregar
        document.addEventListener("DOMContentLoaded", function() {

            // Dados vindos do nosso @Model
            var activeUsers = @Model.ActiveUsers;
            var inactiveUsers = @Model.InactiveUsers;

            // Encontra o 'canvas' pelo ID
            var ctx = document.getElementById("myBarChart").getContext('2d');

            var myBarChart = new Chart(ctx, {
                type: 'bar', // Tipo de gráfico
                data: {
                    labels: ["Utilizadores Ativos", "Utilizadores Inativos"], // Legendas X
                    datasets: [{
                        label: "Quantidade",
                        backgroundColor: ["#1cc88a", "#e74a3b"], // Cores (Verde e Vermelho)
                        hoverBackgroundColor: ["#17a673", "#c73e31"],
                        borderColor: "#4e73df", // Cor da borda (se visível)
                        data: [activeUsers, inactiveUsers], // Os dados
                        maxBarThickness: 50 // Limita a largura das barras (opcional)
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false // Esconde a legenda principal
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    },
                }
            });
        });
    </script>
}