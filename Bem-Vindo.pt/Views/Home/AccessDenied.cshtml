@{
    ViewData["Title"] = "Acesso Negado";
}

<div class="container text-center" style="margin-top: 50px; margin-bottom: 50px;">

    <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">

            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning text-dark">
                    <h1 class="h3 m-0 fw-normal">@ViewData["Title"]</h1>
                </div>
                <div class="card-body p-5">

                    <i class="fas fa-user-lock fa-4x mb-4 text-warning"></i>

                    <h2 class="h4 text-warning">Acesso Negado (Erro 403)</h2>

                    <p class="mt-4 text-muted">
                        Lamentamos, mas não tem as permissões necessárias para aceder a esta página.
                    </p>
                    <p>
                        Se acha que isto é um erro, por favor contacte o administrador do site.
                    </p>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-3">
                        <i class="fas fa-home me-2"></i>
                        Voltar à Página Inicial
                    </a>

                </div>
            </div>

        </div>
    </div>
</div>