@{
    ViewData["Title"] = "Email Enviado";
}

<div class="container text-center" style="margin-top: 50px; margin-bottom: 50px;">

    <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">

            <div class="card shadow-sm">
                <div class="card-body p-5">

                    <i class="fas fa-envelope-circle-check fa-4x mb-4" style="color: #198754;"></i>

                    <h1 class="h3 mb-3 fw-normal">Verifique o seu Email</h1>

                    <div class="alert alert-info" role="alert">
                        Se o email que inseriu existir na nossa base de dados, enviámos-lhe um link para redefinir a sua password.
                        <br>
                        Por favor, verifique a sua caixa de entrada (e spam).
                    </div>

                    <p class="mt-4 text-muted">
                        Pode fechar esta página.
                    </p>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-3">
                        <i class="fas fa-home me-2"></i>
                        Voltar à Página Inicial
                    </a>

                </div>
            </div>

        </div>
    </div>
</div>