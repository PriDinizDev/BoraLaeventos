@{
    ViewData["Title"] = "Esqueci-me da Password";
}

<div class="container" style="margin-top: 50px; margin-bottom: 50px;">
    <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">

            <div class="card shadow-sm">
                <div class="card-body p-5">

                    <h1 class="h3 mb-3 fw-normal text-center">Recuperar Password</h1>
                    <p class="text-center text-muted mb-4">Insira o seu email e enviaremos um link para redefinir a sua password.</p>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <form asp-action="ForgotPassword" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-floating mb-3">
                            <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com" required>
                            <label for="email">Endereço de Email</label>
                            @Html.ValidationMessage("email", "", new { @class = "text-danger small" })
                        </div>

                        <button class="w-100 btn btn-lg btn-primary" type="submit">Enviar Link de Recuperação</button>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>
                            Voltar ao Login
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>