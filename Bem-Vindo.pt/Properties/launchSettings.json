{
  "$schema": "http://json.schemastore.org/launchsettings.json",
  "profiles": {
    // Mantivemos APENAS o perfil chamado "http"
    "http": {
      "commandName": "Project", // Usa o servidor Kestrel interno
      "dotnetRunMessages": true,
      "launchBrowser": true, // Abre o navegador automaticamente
      "applicationUrl": "http://localhost:5037", // Define o URL exato
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development" // Define o ambiente como Desenvolvimento
      }
    }
    // Os perfis "https" e "IIS Express" foram removidos para evitar confusão
  }
}